{
  "task_type": "segmentation",
  "task_name": "Image Segmentation",
  "seed": 42,
  "output_dir": "runs/segmentation",
  "checkpoints_dir": "checkpoints/segmentation",
  
  "data": {
    "train_dir": "Data/segmentationData/train",
    "val_dir": "Data/segmentationData/test",
    "num_classes": 3,
    "image_size": 512
  },
  
  "model": {
    "name": "Unet",
    "encoder_name": "timm-efficientnet-b0",
    "encoder_weights": "noisy-student",
    "in_channels": 3,
    "classes": 3
  },
  
  "training": {
    "epochs": 20,
    "batch_size": 8,
    "num_workers": 8,
    "log_interval": 10,
    "save_interval": 5
  },
  
  "optimizer_type": "AdamW",
  "scheduler_type": "CosineAnnealingLR",

  "inference": {
    "batch_size": 8,
    "num_workers": 8,
    "output_dir": "inference_results/segmentation"
  }
} 