{
  "task_type": "classification",
  "task_name": "Image Classification",
  "seed": 42,
  "output_dir": "runs/classification",
  "checkpoints_dir": "checkpoints/classification",
  "tensorboard_dir":"runs",
  
  "data": {
    "train_dir": "Data/classificationData/train",
    "train_csv": "Data/classificationData/train/train.csv",
    "val_dir": "Data/classificationData/val",
    "val_csv": "Data/classificationData/val/val.csv",
    "num_classes": 2,
    "image_size": 224
  },
  
  "model": {
    "name": "vit_tiny_patch16_224.augreg_in21k_ft_in1k",
    "img_size" : 224, 
    "patch_size" : 16,
    "embed_dims" : 192,
    "pretrained": true,
    "num_classes": 2
  },
  
  "training": {
    "epochs": 20,
    "batch_size": 16,
    "num_workers": 8,
    "log_interval": 10,
    "save_interval": 5
  },

  "optimizer_type" : {
    "name" : "AdamW",
    "lr" : 5e-4,
    "decay" : 1e-5,
    "scheduler_type" : "CosineLRScheduler"

  },
  
  "inference": {
    "img_dir" : "test/",
    "batch_size": 32,
    "num_workers": 8,
    "output_dir": "inference_results/classification"
  }
} 