{
  "task_type": "classification",
  "task_name": "Image Classification",
  "seed": 42,
  "output_dir": "runs/classification",
  
  "data": {
    "train_dir": "Data/classificationData/train",
    "val_dir": "Data/classificationData/test",
    "num_classes": 3,
    "image_size": 224
  },
  
  "model": {
    "name": "convnextv2_nano.fcmae_ft_in22k_in1k_384",
    "pretrained": false,
    "num_classes": 3,
    "drop_rate": 0.2
  },
  
  "training": {
    "epochs": 50,
    "batch_size": 8,
    "num_workers": 8,
    "log_interval": 10,
    "save_interval": 5
  },
  
  "optimizer": {
    "optimizer_type": "AdamW",
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "adamw_beta1": 0.9,
    "adamw_beta2": 0.999,
    "adamw_eps": 1e-8
  },
  
  "scheduler": {
    "scheduler_type": "CosineAnnealingLR",
    "scheduler_t_max": 50,
    "scheduler_eta_min": 0
  },

  "inference": {
    "batch_size": 8,
    "num_workers": 8,
    "output_dir": "inference_results/classification"
  }
} 